# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /search                     controllers.Application.search(q: Option[String] ?= None)
GET     /search.json                controllers.Application.searchjson(q: Option[String] ?= None)

GET     /commits.json               controllers.Application.commitsjson(repofullname: Option[String] ?= None, limit: Option[Int] ?= Some(100))

GET     /contributors.json          controllers.Application.contributorsjson(repofullname: Option[String] ?= None)

GET     /repo/:author/:reponame     controllers.Application.repo(author, reponame)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
